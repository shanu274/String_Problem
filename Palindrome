class Solution {
    int isPalindrome(String S) {
        
        S = S.replaceAll("\\s", "").toLowerCase();
         
        int i = 0;
        int j = S.length() - 1;
        
        //boolean flag = true;
        while(i < j){
             if(S.charAt(i) != S.charAt(j)){
                 return 0;
                 //break;
             }
             i++;
             j--;
        }
            return 1;
        
        
    }
};
